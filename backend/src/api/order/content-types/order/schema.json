{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "customerName": {
      "type": "string",
      "required": true
    },
    "phone": {
      "type": "biginteger",
      "required": true
    },
    "address": {
      "type": "string",
      "required": true
    },
    "note": {
      "type": "text",
      "required": false
    },
    "paymentStatus": {
      "type": "enumeration",
      "enum": [
        "paid",
        "unpaid"
      ]
    },
    "totalAmount": {
      "type": "decimal",
      "required": true
    },
    "tax": {
      "type": "decimal",
      "required": true
    },
    "deliveryType": {
      "type": "enumeration",
      "enum": [
        "delivery",
        "pickup"
      ],
      "default": "delivery"
    },
    "promoCode": {
      "type": "string"
    },
    "orderStatus": {
      "type": "enumeration",
      "enum": [
        "pending",
        "processing",
        "canceled",
        "declined",
        "fulfill"
      ]
    },
    "vendorId": {
      "type": "string",
      "required": true
    },
    "vendorUsername": {
      "type": "string",
      "required": true
    },
    "vendorName": {
      "type": "string",
      "required": true
    },
    "vendorAvatar": {
      "type": "string",
      "required": true
    },
    "dishes": {
      "type": "json",
      "required": true
    },
    "subtotal": {
      "type": "decimal",
      "required": true,
      "default": 0
    },
    "customerOrderId": {
      "type": "biginteger",
      "required": true,
      "unique": false
    }
  }
}
