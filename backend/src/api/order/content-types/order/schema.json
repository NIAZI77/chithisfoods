{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "customerName": {
      "type": "string",
      "required": false
    },
    "address": {
      "type": "string",
      "required": false
    },
    "note": {
      "type": "text",
      "required": false
    },
    "paymentStatus": {
      "type": "enumeration",
      "enum": [
        "paid",
        "unpaid",
        "refunded"
      ],
      "default": "unpaid"
    },
    "totalAmount": {
      "type": "decimal",
      "required": true
    },
    "tax": {
      "type": "decimal",
      "required": true
    },
    "deliveryType": {
      "type": "enumeration",
      "enum": [
        "delivery",
        "pickup"
      ],
      "default": "delivery"
    },
    "orderStatus": {
      "type": "enumeration",
      "enum": [
        "pending",
        "in-process",
        "ready",
        "delivered",
        "cancelled"
      ],
      "default": "pending"
    },
    "vendorId": {
      "type": "string",
      "required": true
    },
    "vendorUsername": {
      "type": "string",
      "required": true
    },
    "vendorName": {
      "type": "string",
      "required": true
    },
    "vendorAvatar": {
      "type": "string",
      "required": true
    },
    "dishes": {
      "type": "json",
      "required": true
    },
    "subtotal": {
      "type": "decimal",
      "required": true,
      "default": 0
    },
    "customerOrderId": {
      "type": "biginteger",
      "required": true,
      "unique": false
    },
    "user": {
      "type": "email",
      "required": true
    },
    "orderTotal": {
      "type": "decimal",
      "required": true
    },
    "deliveryFee": {
      "type": "decimal",
      "default": 0
    },
    "totalTax": {
      "type": "decimal"
    },
    "vendorDeliveryFee": {
      "type": "decimal",
      "default": 0
    },
    "vendor_payment": {
      "type": "enumeration",
      "enum": [
        "paid",
        "unpaid",
        "refunded"
      ],
      "default": "unpaid"
    },
    "deliveryDate": {
      "type": "date",
      "required": false
    },
    "deliveryTime": {
      "type": "time",
      "required": true
    },
    "phone": {
      "type": "string"
    },
    "refundDetails": {
      "type": "json"
    }
  }
}
